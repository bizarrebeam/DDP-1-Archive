import turtle
import random
import math
from tkinter import * 
from tkinter import messagebox

# Initial set
mario = turtle.Turtle()

# Asking user how many towers they want to build
amount_of_tower = mario.textinput("Build the tower!", "Enter" 
                                "the amount of tower you want "
                                " to build (integer)")
if amount_of_tower.isdigit():
    amount_of_tower = int(amount_of_tower)

    # If user choose to build more than one tower
    if amount_of_tower > 1:
        tower_distance = int(mario.textinput("Enter the distance "
                                        "between each tower (integer)"))
        
        # Asking user the distance between each tower
        if tower_distance.isdigit():
            if tower_distance < 2 or tower_distance > 5:
                messagebox.showinfo("Invalid input!", "Input value "
                            "must be between 2 and 5. Please "
                            "provide a valid input.")
        else:
            messagebox.showinfo("Invalid input!", "Input value "
                            "must be a positive integer. Please "
                            "provide a valid input." )
                            
        
        # Asking user the differences between each tower's layer
        delta_of_layer = mario.textinput("Enter the number "
                                        "of layer differences "
                                        "between each tower "
                                        "(integer)")
        if delta_of_layer.isdigit():
            delta_of_layer = int(delta_of_layer)

            if delta_of_layer < 2 or delta_of_layer > 5:
                messagebox.showinfo("Invalid input!", "Input value "
                        "must be between 2 and 5. Please "
                        "provide a valid input." )
            else:
                messagebox.showinfo("Invalid input!", "Input value "
                            "must be a positive integer. Please "
                            "provide a valid input." )
else:
        messagebox.showinfo("Invalid input!", "Input value "
                            "must be a positive integer. "
                            "Please provide a valid input." )
    

